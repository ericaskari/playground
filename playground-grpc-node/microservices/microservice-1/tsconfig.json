{
  "compilerOptions": {
    // "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmit": false,
    "noEmitOnError": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "lib": [
      "ES2020",
      "ES6"
    ],
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "typings/global.d.ts",
    "src/**/*"
  ]
}
